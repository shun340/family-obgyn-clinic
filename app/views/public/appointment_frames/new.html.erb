<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>新規予約画面</h1>
    </div>
    <div class="col-12 mt-3 content">
      <%= form_for :appointment_frame, url: detail_appointments_path, method: :post, local: true do |ff| %>
      <div class="day form-group">
        <%= ff.label :day, '日付' %>
        <%= ff.text_field :day, class: 'form-control', value: @day, readonly: true %>
      </div>
      <div class="time form-group">
        <%= ff.label :time, '時間' %>
        <%= ff.text_field :time, class: 'form-control', value: @time, readonly: true %>
      </div>

      <%= ff.hidden_field :start_time, value: @start_time %>

      <div class="submit">
        <%= ff.submit value: '予約する', class: 'btn btn-primary mx-auto d-block' %>
      </div>
    <% end %>
    <div class="col-12 text-right">
      <%= link_to '戻る', appointment_frames_path %>
    </div>
    </div>
  </div>
</div>